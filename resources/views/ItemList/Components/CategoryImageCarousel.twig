<script type="x/template" id="vue-category-image-carousel">
    <a :id="'owl-carousel-' + _uid" v-if="$_enableCarousel" class="owl-carousel owl-theme" :href="itemUrl">
        <div v-for="(imageUrl, index) in imageUrls">
            <lazy-img
                class="img-basket-small"
                :image-url="imageUrl.url"
                :alt="getAltText(imageUrl)"
                :title="getAltText(imageUrl)"
                v-if="index === 0 && !disableLazyLoad" >
            </lazy-img>
            <img v-else-if="index !== 0 && !disableLazyLoad" class="img-fluid owl-lazy" :data-src="imageUrl.url" :title="getAltText(imageUrl)" :alt="getAltText(imageUrl)">
            <img v-else class="img-fluid" :src="imageUrl.url" :alt="getAltText(imageUrl)" :title="getAltText(imageUrl)" style="width:150px">
        </div>
    </a>
    <a v-else :href="itemUrl" class="test">
        <img v-if="!disableLazyLoad" ref="itemLazyImage" template="#vue-item-lazy-img" :src="imageUrls | itemImage" :alt="getAltText(imageUrls[0])" :title="getAltText(imageUrl)"></img>
        <img v-else class="img-fluid" :src="imageUrls | itemImage" :alt="getAltText(imageUrls[0])" :title="getAltText(imageUrl)">
    </a>
</script>
