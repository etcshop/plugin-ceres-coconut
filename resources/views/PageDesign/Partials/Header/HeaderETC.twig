      	<a href="{{ homepageURL }}" title="Startseite"><img src="/layout/content/base/etc_logo.png" style="width:250px"></a>
    </div>
    <div id="searchContainer" class="headContainer col-lg-5 col-md-4 col-sm-5">
      {% set overrideSearchBar = LayoutContainer.show("Ceres::Search.SearchBar") %}
