Vue.component("cookie-banner", {
  template: "#vue-cookie-banner",
  delimiters: ["${", "}"],
  data()
  {
    return {
        cookieSessionStatus: -1,
        componentKey: 0,
        webshopId: -1
    };
  },
  created()
  {
      this.getCookie();
  },
  methods: {
    Accepted()
    {
      console.log("Webshop ID: " + webshopId);

      if (this.webshopId == 0){
        document.cookie = "mcoo=1";
      }
      else {
        document.cookie = "mlcoo=1";
      }
      this.getCookie();
      this.forceRerender();
    },
    Declined()
    {
      console.log("Webshop ID: " + this.webshopId);

      if (this.webshopId == 0){
        document.cookie = "mcoo=0";
      }
      else {
        document.cookie = "mlcoo=0";
      }
      this.getCookie();
      this.forceRerender();
    },
    getCookie() {
      this.cookieSessionStatus = -1;
      var name = "mcoo=";
      if (this.webshopId == 0){
        name = "mcoo=";
      }
      else {
        name = "mlcoo=";
      }
      var decodedCookie = decodeURIComponent(document.cookie);
      var ca = decodedCookie.split(';');
      for(var i = 0; i <ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') {
          c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
          this.cookieSessionStatus = c.substring(name.length, c.length);
          document.getElementById("CookieBanner_StateInputPD").value = this.cookieSessionStatus;
          return this.cookieSessionStatus;
        }
      }
      return -1;
    },
    forceRerender() {
      this.componentKey += 1;
    }
  }
});
</script>
